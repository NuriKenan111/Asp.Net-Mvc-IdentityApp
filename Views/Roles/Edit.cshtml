@model AppRole

<form action="Edit" method="post">
    <div class="col-5 container">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title" style="text-align: center;">Edit Role</h5>
                <hr>
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" name="Id" value="@Model.Id" hidden>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="Name" placeholder="Enter name">
                </div>
                <button type="submit" class="btn btn-primary container-fluid">Save</button>
            </div>
        </div>
    </div>
</form>

<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @if(ViewBag.Users != null){
            @if(ViewBag.Users.Count == 0){
                <tr><td colspan="3">No user</td></tr>
            }
            @foreach(var item in ViewBag.Users){
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-controller = "Users" asp-action ="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    </td>
                </tr>
            }
        }
       
    </tbody>
</table>